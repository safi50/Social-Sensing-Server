{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "app.py" }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    },
    "functions": {
        "api/**/*.py": {
            "runtime": "@vercel/python"
        }
    },
    "hooks": {
        "prebuild": "python -m venv venv",
        "postinstall": "venv/bin/pip install -r requirements.txt"
    }
}
